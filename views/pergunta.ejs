<%- include ('partials/header.ejs') %> 

<body>
    <%- include ('partials/navbar.ejs') %> 


    <div class="container">
        <p>Pergunta n√∫mero: [<%= pergunta.id %>] </p>

        <h1><%= pergunta.titulo %> </h1>
        <p><%=  pergunta.descricao %> </p>
        
        <h1>Responda</h1>
        <form method="POST" action="/responder">
            <label for="">Resposta</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" id="" cols="10" rows="4"></textarea>
            <input name="pergunta" type="hidden" value="<%= pergunta.id %> ">
            <button type="submit" class="btn btn-primary my-4">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card my-2">
                <div class="card-body">
                    	<p><%= resposta.corpo %> </p>
                </div>
            </div>
        <% }) %>
    </div>

</body>

